  <dependencies>
    <!-- remove fwk dependencies from ear root file. -->
    <dependency>
      <groupId>com.oxit.fwk</groupId>
      <artifactId>fwk</artifactId>
      <version>${fwk.version}</version>
      <type>pom</type>
      <scope>provided</scope>
    </dependency>
    <!-- applications to add in the archive file. -->
    <dependency>
      <groupId>com.oxit.decathlon</groupId>
      <artifactId>showCasePolymer-client-web</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>com.oxit.decathlon</groupId>
      <artifactId>showCasePolymer-server-mvc</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <type>war</type>
    </dependency>
